				<div class="form-group" ng-show="form.multiplePieces === 'Multiple pieces'">

					<div class="col-md-12">
						<label id="explain-piece">Please Explain</label>
	    				<textarea 
	    				rows="5" 
	    				class="form-control" 
	    				id="explain-piece"
	    				name="explain_piece"
	    				ng-model="form.explainPiece"  
	    				placeholder=""></textarea>
					</div>
					
				</div>

				<hr>

				<h3 class="title sub-title" id="hoursForTaskTitle">Breakdown of hours allocated to CDS</h3>
				
				<div class="form-group">
					<div class="col-sm-12 bottom10">
					<label for="entire-project-hours" class="radio-inline">
						<div class="radio-icon" ng-class="{'active' : request_form.hours_selection.$valid}">
							<div class="checked-radio-icon" ng-class="{'active': form.hoursSelection == 'Hours for entire project'}"></div>
						</div>
						<input type="radio" id="entire-project-hours" name="hours_selection" ng-model="form.hoursSelection" value="Hours for entire project" ng-required="form.hoursSelection !== 'Hours for task' && form.jobType !== 'Editorial Amends'"> Hours for Entire Project
					</label>
				
				
					<label for="specific-task-hours" class="radio-inline">
						<div class="radio-icon" ng-class="{'active' : request_form.hours_selection.$valid}">
							<div class="checked-radio-icon" ng-class="{'active': form.hoursSelection == 'Hours for task'}"></div>
						</div>
						<input type="radio" id="specific-task-hours" name="hours_selection" ng-model="form.hoursSelection" value="Hours for task" ng-required="form.hoursSelection !== 'Hours for entire project' && form.jobType !== 'Editorial Amends'"> Hours for this Specific Task
					</label>
				
					</div>
				</div>
				

				<div class="form-group">
					<label for="studio-hours" class="col-sm-1 control-label">Studio</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="studio-hours"
	    				name="studio_hours"
	    				ng-model="form.studioHours" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

					<label for="des-hours" class="col-sm-1 control-label">Des</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="des-hours"
	    				name="des_hours"
	    				ng-model="form.desHours"  
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

					<label for="sdes-hours" class="col-sm-1 control-label">sDes</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="sdes-hours"
	    				name="sdes_hours"
	    				ng-model="form.sdesHours" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

					<label for="dig-des" class="col-sm-1 control-label">Digital Des</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="dig-des"
	    				name="dig_des"
	    				ng-model="form.digDes" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

				</div>

				<div class="form-group">
					
					<label for="des-dir" class="col-sm-1 control-label">Design Dir</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="des-dir"
	    				name="des_dir"
	    				ng-model="form.desDir" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

					<label for="cd-hours" class="col-sm-1 control-label">CD</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="cd-hours"
	    				name="cd_hours"
	    				ng-model="form.cdHours" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

					<label for="gd-hours" class="col-sm-1 control-label">GD</label>
					<div class="col-sm-1">
						<input 
						type="text" 
						class="form-control" 
						id="gd-hours"
	    				name="gd_hours"
	    				ng-model="form.gdHours" 
						placeholder=""
						ng-class="{'active' : request_form.need_est_hours.$invalid}">
					</div>

				</div>

				<div class="form-group">
					<div class="col-md-12">
						<label class="checkbox-inline">
							<div class="checkbox-icon" ng-class="{'active' : request_form.need_est_hours.$valid}">
								<div class="checked-checkbox-icon" ng-class="{'active': form.needEstHours}"></div>
							</div>
							<input 
							type="checkbox" 
							id="need-est-hours"
		    				name="need_est_hours"
		    				ng-model="form.needEstHours" 
							ng-true-value="'Need an estimate'"
							ng-required="((form.desHours + form.sdesHours + form.studioHours + form.cdHours + form.gdHours + form.digDes + form.desDir) < 0.5) || !form.desHours && !form.sdesHours && !form.studioHours && !form.cdHours && !form.gdHours && !form.digDes && !form.desDir && form.jobType !== 'Editorial Amends'"> Need an Estimate
						</label>
					</div>
				</div>

			</div>	<!-- form-section -->